<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TipsyActivity">

    <EditText
        android:id="@+id/enterTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ems="10"
        android:hint="@string/hint_enterTotal"
        android:inputType="numberDecimal" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnFifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="calculatePercent"
            android:singleLine="true"
            android:tag=".15"
            android:text="@string/btn_fifteenPercent" />

        <Button
            android:id="@+id/btnEighteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="calculatePercent"
            android:tag=".18"
            android:text="@string/btn_eighteenPercent" />

        <Button
            android:id="@+id/btnTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="calculatePercent"
            android:tag=".2"
            android:text="@string/btn_twentyPercent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tipView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/tv_tip"
        android:textColor="#33b5e5"
        android:textSize="100sp"
        android:textStyle="bold" />

</LinearLayout>
